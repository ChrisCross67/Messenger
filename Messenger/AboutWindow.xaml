                       HorizontalAlignment="Center"
                       FontSize="24"
                       FontWeight="Bold"
                       Text="Messenger" />
            <Image Height="24"
                   Margin="10,0"
                   Source="/Icons/Conference-Call.Purple.ico" />
        </StackPanel>

        <TextBlock HorizontalAlignment="Center" Text="{Binding Source={StaticResource Locator}, Path=LocalizationHelper.[Resources.Author], StringFormat={}{0} : Christopher Sauer}" />


